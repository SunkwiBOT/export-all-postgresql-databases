{
  "include": [
    "./**/*.ts",
    "./**/*.d.ts"
  ],
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "module": "NodeNext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "lib": [
      "es2022"
    ]
  },
  "ts-node": {
    "esm": true
  }
}
